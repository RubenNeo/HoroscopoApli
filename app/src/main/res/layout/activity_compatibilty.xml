<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

        <Spinner
            android:id="@+id/spinnerHoroscope1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="16dp"
            android:hint="Horóscopo 1" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="16dp">

        <Spinner
            android:id="@+id/spinnerHoroscope2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:hint="Horóscopo 2" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/calculateCompatibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculate Compatibility" />

    <ImageView
        android:id="@+id/imageCompatibility"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="30dp"/>


    <TextView
        android:id="@+id/textCompatibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:text="HOLA"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_compatibily"/>


</LinearLayout>
